/*
Sum of 2 Nos by taking input from user
*/
#include<stdio.h>
#include<conio.h>
void main()
{
  int n1,n2,total;
  clrscr();
  printf("\nEnter 2 Nos");
  //def - scanf used to take input
  //syntax - scanf("format-specifiers" ,&var1,&var2,...);
  //note - format specifiers should be adjacent
  scanf("%d%d",&n1,&n2);

  total=n1+n2;

  printf("\nSum is %d",total);
  printf("\nThe sum of %d and %d is %d",n1,n2,total);
  printf("\n%d+%d=%d",n1,n2,total);
  printf("\n %d\n+%d\n-----\n%d",n1,n2,total);
  getch();
}