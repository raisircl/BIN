#include<iostream.h>
#include<conio.h>

class BankAcc
{
  private:
   int accno;
   char accname[20];
   int bal;

  public:
   void openacc()
   {
     cout<<"\n enter accno accname and amount to open acc";
     cin>>accno>>accname>>bal;
   }
   void accinfo()
   {
    cout<<"\n Your Acc Detail is :\n";
    cout<<"\nAccNo: "<< accno;
    cout<<"\nAccName: "<<accname;
    cout<<"\nBalance: "<<bal;
   }
   void deposit()
   {
     int amnt;
     cout<<"\nenter the amount to deposit";
     cin>>amnt;
     bal=bal+amnt;
     cout<<"\n After deposit your balance is "<<bal;
   }
   void withdraw()
   {
     int amnt;
     cout<<"\nenter amount to withdraw";
     cin>>amnt;
     if(amnt<=bal)
     {
       bal=bal-amnt;
       cout<<"\nAfter withdrawl your balance is "<<bal;
     }

     else
     {
       cout<<"\nInsufficent balance in your acc. the balance is"<<bal;
     }
   }
   int getbal()
   {
      return bal;
   }
};
void main()
{
  BankAcc b1;
  int choice;
  clrscr();

  b1.openacc();
  do
  {
   cout<<"\n Press 1 for deposit \n Press 2 to Withdraw\n Press 3 to Acc Info\n Press 4 for exit";
   cin>>choice;
   switch(choice)
   {
    case 1:
    b1.deposit();
    break;
    case 2:
    b1.withdraw();
    break;
    case 3:
    b1.accinfo();
    break;
    case 4:
     choice=0;
     break;
    default:
     cout<<"\n Invalid choice Try again";
     break;

   }
  }while(choice!=0);

}


